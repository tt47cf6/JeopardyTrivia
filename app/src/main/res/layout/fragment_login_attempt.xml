<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rogden33.jeopardytrivia.LoginAttemptFragment">

    <!-- Attempted username login display -->
    <TextView
        android:id="@+id/login_TextView_loginAttempt_usernameDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Pin entry  -->
    <EditText
        android:id="@+id/login_EditText_loginAttempt_pinEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_loginAttempt_pinHint"
        android:inputType="numberPassword"/>

    <!-- Login button -->
    <Button
        android:id="@+id/login_Button_loginAttempt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/login_loginAttempt_loginButtonText"/>

</LinearLayout>
