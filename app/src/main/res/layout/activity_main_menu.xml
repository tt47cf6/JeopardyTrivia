<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="rogden33.jeopardytrivia.MainMenuActivity">

    <!-- Show the username -->
    <TextView
        android:id="@+id/mainMenu_TextView_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Show the current score -->
    <TextView
        android:id="@+id/mainMenu_TextView_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Button to go to RandomQuestion activity -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainMenu_ButtonText_toRandomQuestions"
        android:onClick="randomOnClick"
        android:background="@drawable/default_button_theme"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainMenu_ButtonText_toViewScores"
        android:onClick="viewScoreOnClick"
        android:background="@drawable/default_button_theme"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainMenu_ButtonText_toGameBoard"
        android:onClick="gameBoardOnClick"
        android:background="@drawable/default_button_theme"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Final Shortcut"
        android:onClick="finalOnClick"
        android:background="@drawable/default_button_theme"
        android:layout_margin="5dp"/>


</LinearLayout>
